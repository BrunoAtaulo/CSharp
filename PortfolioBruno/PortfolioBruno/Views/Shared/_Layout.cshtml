<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/estilo.css">
    <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.min.css">
</head>
<body>
    <header>
        <div class="caixa">
            <h1><img src="~/imagens/logo.png"></h1>
            <nav>
                <ul>
                    <li><a href="Index">Home</a></li>
                    <li><a href="Projetos">Projetos</a></li>
                    <li><a href="Skills">Skills</a></li>
                    <li><a href="Contato">Contato</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>
        <footer>
            <div id="footer" class="text-center">
                <div class="container-fluid">
                    <div class="socials-media text-center">

                        <ul class="list-unstyled">
                            <li>
                                <a href="https://github.com/BrunoAtaulo" target="_blank"><i class="ion-social-github"></i></a>
                            </li>
                            <li>
                                <a href="https://facebook.com/b.begliomini" target="_blank">
                                    <i class="ion-social-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://br.pinterest.com/brunoataulo/" target="_blank">
                                    <i class="ion-social-pinterest"></i>
                                </a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/bruno_ataulo/" target="_blank">
                                    <i class="ion-social-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    </div>
                </div>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>

        </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
